<UserControl x:Class="InventoryManagementSystemUI.FeatureDashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManagementSystemUI.FeatureDashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F4F4F9">
        <StackPanel>
            <TextBlock Text="📊 Dashboard Overview" FontSize="26" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

            <!-- Card View -->
            <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Left">
                <Border Width="200" Height="100" Background="#10B981" CornerRadius="10" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Total Items" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="245" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Width="200" Height="100" Background="#3B82F6" CornerRadius="10" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Low Stock" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="12" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Width="200" Height="100" Background="#F59E0B" CornerRadius="10" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Suppliers" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="7" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Static Graph Placeholder -->
            <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Height="200">
                <StackPanel>
                    <TextBlock Text="📈 Monthly Purchase Overview (Static Preview)" FontSize="18" FontWeight="SemiBold" Foreground="#333"/>
                    <Rectangle Height="120" Margin="0,10,0,0" Fill="#E5E7EB" RadiusX="6" RadiusY="6"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>